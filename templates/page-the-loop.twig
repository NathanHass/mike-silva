{% extends "base.twig" %}

{% block body_class %} page--loop{% endblock %}

{% block content %}

  <div class="page__topper">
    <div class="page__topper__img-mod" style="background-image: url('{{post.thumbnail.src}}')">
      <img class="page__topper__img" src="{{post.thumbnail.src}}">
    </div>
    <div class="page__topper__hgroup">
      <h2 class="page__topper__h"><span>{{post.title}}</span></h2>
    </div>
  </div>
  <div class="page__width">
    <section class="page__content">

      <div class="page__content-block page__content-block--intro">
        <div class="page__content-block__width">
          {{post.content}}
        </div>
        <ul class="page__loop-members">
          {% for member in post.get_field('member') %}
            <li class="page__loop-member">
              <a href="" class="page__loop-member__link">
                <div class="page__loop-member__img" style="background-image: url('{{member.headshot.url}}')"></div>
                <p class="page__loop-member__name">{{member.name}}</p>
              </a>
            </li>
         {% endfor %}
        </ul>
      </div>

      {% for group in post.get_field('services') %}

          <div class="page__content-block">
          <div class="page__content-block__width">
             <h3 class="page__section-h">{{group.title}}</h3>
             <ul class="page__bullet-list">
             {% for item in group.services %}
                <li class="page__bullet-list__item">{{item.service}}</li>
             {% endfor %}
            </ul>
          </div>
        </div>
      {% endfor %}

      {% for member in post.get_field('member') %}

          <div class="page__content-block page__content-block--loop">
            <div class="page__content-block__width">
               <h3 class="page__section-h">
                {% if member.website %}
                  <a class="page__section-h__link" href="{{member.website}}" target="_blank">{{member.name}}<span class="page__section-h__site">See Work</span></a>
                {% else %}
                  {{member.name}}
                {% endif %}
               </h3>
              <div class="loop__desc">
                {{member.description}}
              </div>
            </div>

             <ul class="loop__img-list">
             {% for image in member.images %}
                <li class="loop__img-list__item">

                  <img src="{{image.image.url}}" alt="{{image.image.alt}}">
                </li>
             {% endfor %}
            </ul>
        </div>
      {% endfor %}
    </section>
  </div>
{% endblock %}
